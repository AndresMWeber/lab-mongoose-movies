<h2>Edit movie: {{movie.title}}</h2>

<form action="/movies/{{movie.id}}" method="POST">

  <p>Title</p>
  <input type="text" name="title" value="{{movie.title}}">

  <p>Genre</p>
  <input type="text" name="genre" value="{{movie.genre}}">

  <p>Director</p>
  <select name="director">
    {{#each directors}}
      {{#if this.selected}}
        <option selected=true value="{{this._id}}">{{this.name}}</option>
      {{else}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/if}}
    {{/each}}
  </select>
  
  <p>Plot</p>
  <input type="text" name="plot" value="{{movie.plot}}">
  <button>Save</button>

</form>